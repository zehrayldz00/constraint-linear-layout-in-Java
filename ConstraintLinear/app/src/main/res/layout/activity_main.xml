<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/textColor"
        android:text="Giriş Yap"
        android:textStyle="italic"
        android:id="@+id/main_activity_textViewTitle"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Kullanıcı adınızı giriniz."
        android:textAlignment="center"
        android:textSize="17sp"
        android:id="@+id/main_activity_editTextUserName"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textColorHint="@color/textColorHint"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf ="@+id/main_activity_textViewTitle" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Şifrenizi giriniz."
        android:textAlignment="center"
        android:textSize="17sp"
        android:inputType="textPassword"
        android:id="@+id/main_activity_editTextUserPassword"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textColorHint="@color/textColorHint"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf ="@+id/main_activity_editTextUserName"/>

    <Button
        android:layout_width="match_parent"
        android:text="Giriş Yap"
        android:id="@+id/main_activity_buttonSignIn"
        android:textSize="19sp"
        android:onClick="btnSignIn"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonBgColor"
        android:textColor="@color/textColor"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/main_activity_editTextUserPassword"
        android:layout_marginTop="30dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/textColor"
        android:text="Sonuç"
        android:textStyle="bold"
        android:id="@+id/main_activity_textViewResult"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/main_activity_buttonSignIn"
        app:layout_constraintLeft_toLeftOf="@id/main_activity_buttonSignIn"
        app:layout_constraintRight_toRightOf="@id/main_activity_buttonSignIn" />



</androidx.constraintlayout.widget.ConstraintLayout>