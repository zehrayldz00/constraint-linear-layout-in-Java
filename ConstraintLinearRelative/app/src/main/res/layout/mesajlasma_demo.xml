            android:text="Kullanıcı 2"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/mesajlasmaTextColor"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/mesajlasma_imageViewKullanici2"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/mesajlasma_textViewKullanici2Mesaj2"
            android:text="Test Mesajı 2"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/mesajlasmaTextColor"
            android:layout_marginTop="5dp"
            android:layout_below="@id/mesajlasma_textViewKullaniciAdi2"
            android:layout_toLeftOf="@id/mesajlasma_imageViewKullanici2"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <!-- Kullanıcı3 Mesajlaşma -->
